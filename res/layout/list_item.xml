<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/li_entry_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" >

        <AbsoluteLayout
            android:id="@+id/li_buttons_layout"
            android:layout_width="79dp"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/li_deletebtn_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_y="-80dp"
                android:background="#fa954c"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/li_delete_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/x_alt"
                    android:focusable="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_number_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cccccc"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/li_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#888888"
                    android:textSize="32sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/li_separator_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_y="79dp"
                android:background="#ffffff"
                android:src="@drawable/separatorline" />

        </AbsoluteLayout>

        <LinearLayout
            android:id="@+id/li_data_layout"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/li_datatext_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/li_datatext_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#fa954c"
                    android:textIsSelectable="false"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/li_datatext_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="TextView"
                    android:textIsSelectable="false" />

                <TextView
                    android:id="@+id/li_datatext_btm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="TextView"
                    android:textIsSelectable="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/li_bottom_white"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_bottom_grey"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#cccccc"
            android:orientation="horizontal" >

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
